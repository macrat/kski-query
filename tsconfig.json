{
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2015", "es2019"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./",
    "strict": true
  }
}
